<div class="container">
  <div class="row">
    <div class="col-xs-3">

    <h1>User Info</h1>
        <h3 class="profile-name"><%= @user.name %></h3>
     <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>

     <div class="profile-edit">
      <table class="t">
        <tr>
          <th>name</th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th>introduction</th>
          <td><%= @user.introduction %></td>
        </tr>

      </table>

        <% if @user.id == current_user.id %>
          <%= link_to edit_user_path(current_user), class: 'btn btn-default' do %>
          <i class="glyphicon glyphicon-wrench"></i>
          <% end %>
        <% end %>
       </div>
    </div>

    <!-- 投稿の一覧　 -->
    <div class="col-xs-9">
    <h2>Books</h2>
      <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>

      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
            <td><%= link_to book.title, book %></td>
            <td><%= book.body %></td>
<!--             <% if book.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(book) %></td>
            <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %> -->
          </tr>
        <% end %>
      </tbody>
      </table>
    </div>
  </div>
</div>
</div>




