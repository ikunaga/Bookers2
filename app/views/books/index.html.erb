
  <% if @bookn.errors.any? %>
    <div id="error_explanation">
      <h2><%= @bookn.errors.count %>errors prohibited this obj from being saved:</h2>
      <ul>
      <% @bookn.errors.full_messages.each do |message| %>
        <li><%= message %></li>
