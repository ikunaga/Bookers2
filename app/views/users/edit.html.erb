<h2>User Info</h2>

<%= form_for(@user) do |f| %>
    <div>
        <label>Name</label>
        <%= f.text_field :name, autofocus: true, id:"inputEmail", placeholder:"名前"%>
        <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
    </div>

    <div class="form-group has-icon">
    <div class="user-edit-image">

    </div>
    <label for="user_profile_image">Image</label>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
</div>

    <div>
        <label>Introduction</label>
        <%= f.text_field :introduction, autofocus: true %>
        <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
    </div>

    <%= f.submit "Update User",class: "btn btn-default" %>
<% end %>