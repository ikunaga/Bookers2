<% if flash[:notice] %>
<div class="flash">
	<%= flash[:notice] %>
</div>
<% end %>


<div class="container">
	<div class="row">
		<!-- プロフィール -->
		<div class="col-xs-3">
			<h2>UserInfo</h2>
		    <h3 class="profile-name"><%= @userc.name %></h3>
		 <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>

		 <div class="profile-edit">
		  <table class="t">
		    <tr>
		      <th>name</th>
		      <td><%= @user.name %></td>
		    </tr>
		    <tr>
		      <th>introduction</th>
		      <td><%= @user.introduction %></td>
		    </tr>

		  </table>

		    <% if @user.id == current_user.id %>
		        <%= link_to edit_user_path(current_user), class: 'btn btn-default' do %>
		        <i class="glyphicon glyphicon-wrench"></i>
		        <% end %>
		    <% else %>
		        <%= link_to user_path(current_user), class: 'btn btn-default' do %>
		        <i class="glyphicon glyphicon-wrench"></i>
		        <% end %>
		    <% end %>

		   </div>
			   <!-- 投稿 -->
			<div class="user-newbook">
			<h2> New book</h2>

			<%= form_for(@book) do |f| %>

			    <h4> Title</h4>
			    <%= f.text_field :title %>

			    <h4> Opinion</h4>
			    <%= f.text_area :body %>

			    <%= f.submit 'Create Book' %>

			<% end %>
			</div>
		</div>
		<!-- 投稿一覧 -->
		<div class="col-xs-9">
		<h2>Books</h2>
		  <table class="table">
		  <thead>
		    <tr>
		      <th></th>
		      <th>Title</th>
		      <th>Opinion</th>
		    </tr>
		  </thead>

		  <tbody>
		    <% @books.each do |book| %>
		      <tr>
		      	<td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
		        <td><%= link_to book.title, book_path(book.id) %></td>
		        <td><%= book.body %></td>
		      </tr>
		    <% end %>
		  </tbody>
		  </table>
		</div>

	</div>
</div>

