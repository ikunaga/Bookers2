<div class="container">
  <div class="row">
    <div class="col-xs-3">

    <h1>User Info</h1>
    <h3 class="profile-name"><%= @user.name %></h3>
    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>

 <div class="profile-edit">
  <table class="t">
    <tr>
      <th>name</th>
      <td><%= @users.name %></td>
    </tr>
    <tr>
      <th>introduction</th>
      <td><%= @user.introduction %></td>
    </tr>

  </table>

    <% if @userf.id == current_user.id %>
        <%= link_to edit_user_path(current_user), class: 'btn btn-default' do %>
        <i class="glyphicon glyphicon-wrench"></i>
        <% end %>
    <% end %>
   </div>
</div>

<!-- 投稿の一覧　 -->
<div class="col-xs-9">
<h2>Users</h2>
  <table class="table">
    <thead>
    <tr>
      <th>image</th>
      <th>name</th>
    </tr>
    </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
        <td><%= user.name %></td>
        <td><%= link_to 'Show', user_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
  </table>
</div>
</div>
</div>
</div>

<!-- 投稿 -->
<h2> New book</h2>

<%= form_for(@bookn) do |f| %>
 
    <h4> Title</h4>
    <%= f.text_field :title %>

    <h4> Opinion</h4>
    <%= f.text_area :body %>
 
    <%= f.submit 'Create Book' %>
 
<% end %>